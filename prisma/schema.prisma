generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Branch {
  // Use dbgenerated to tell Postgres to run the gen_random_uuid() function
  id      String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name    String
  lockers Locker[]
}

model Locker {
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  branchId  String @db.Uuid // Must match the type of Branch.id
  type      String
  number    Int
  masterKey String
  branch    Branch @relation(fields: [branchId], references: [id])
}

model User {
  id       String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username String @unique
  password String
  role     String @default("STAFF")
}
