generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Branch {
  id      String   @id @default(dbgenerated("gen_random_uuid()"))
  name    String
  lockers Locker[]
  users   User[]
}

model Locker {
  id        String @id @default(dbgenerated("gen_random_uuid()"))
  branchId  String
  type      String
  number    Int
  masterKey String
  branch    Branch @relation(fields: [branchId], references: [id])
}

model User {
  id       String   @id @default(dbgenerated("gen_random_uuid()"))
  username String   @unique
  password String
  role     UserRole @default(STAFF)
  branchId String?
  branch   Branch?  @relation(fields: [branchId], references: [id], onUpdate: NoAction)
}

enum UserRole {
  ADMIN
  STAFF
}
